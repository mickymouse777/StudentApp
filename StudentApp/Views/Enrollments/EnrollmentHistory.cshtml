@model StudentApp.ViewModels.EnrollmentHistoryViewModel

@{
    ViewData["Title"] = "Enrollment History";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="EnrollmentHistory" method="get">
    <div class="form-group">
        <label for="FilterCourseName">Course Name:</label>
        <input type="text" asp-for="FilterCourseName" class="form-control" />
    </div>
    <div class="form-group">
        <label for="FilterStudentName">Student Name:</label>
        <input type="text" asp-for="FilterStudentName" class="form-control" />
    </div>
    <div class="form-group">
        <label for="FilterStartDate">Start Date:</label>
        <input type="date" asp-for="FilterStartDate" class="form-control" />
    </div>
    <div class="form-group">
        <label for="FilterEndDate">End Date:</label>
        <input type="date" asp-for="FilterEndDate" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

<hr />

@if (Model.Enrollments.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Course</th>
                <th>Student</th>
                <th>Enrollment Date</th>
                <th>Last Modified</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Enrollments)
            {
                <tr>
                    <td>@item.Course.CourseName</td>
                    <td>@item.Student.StudentName</td>
                    <td>@item.EnrollmentDate.ToShortDateString()</td>
                    <td>@item.ModifiedDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No enrollment history found based on your filters.</p>
}
